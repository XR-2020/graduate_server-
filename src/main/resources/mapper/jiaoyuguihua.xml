<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.graduate_sever.Dao.JiaoYuGuiHuaMapper">
    <!--实体映射-->
    <resultMap id="JiaoYuGuiHua" type="com.example.graduate_sever.model.JiaoYuGuiHuaXiangMu">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="finishtime" jdbcType="VARCHAR" property="finishtime"/>
        <result column="level" jdbcType="VARCHAR" property="level"/>
        <result column="danwei" jdbcType="VARCHAR" property="danwei"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="partment" jdbcType="VARCHAR" property="partment"/>
        <result column="badge" jdbcType="INTEGER" property="badge"/>
        <result column="tea_name" jdbcType="VARCHAR" property="tea_name"/>
        <result column="grade" jdbcType="VARCHAR" property="grade"/>
    </resultMap>
    <!--参与人映射-->
    <resultMap id="JiaoYuGuiHua_people" type="com.example.graduate_sever.common.People">
        <result column="badeg" jdbcType="INTEGER" javaType="int" property="badge"/>
        <result column="tea_name" jdbcType="VARCHAR" javaType="string" property="name"/>
    </resultMap>
    <resultMap id="count5" type="java.lang.Long"/>
    <!--查询教研项目所有成果-->
    <!--application.yml 中通过 type-aliases-package 指定了实体类的为了，因此-->
    <select id="getAllJiaoYuGuiHua" resultMap="JiaoYuGuiHua,count5">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select jiaoyuguihuaxiangmu.* from jiaoyuguihuaxiangmu where status=1  limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};select count(*) count5 from jiaoyuguihuaxiangmu where status=1;
    </select>
    <!--删除一个教研项目-->
    <delete id="deleteOneJiaoYuGuiHua">
        delete * from jiaoyuguihuaxiangmu where jiaoyuguihuaxiangmu.id=#{id}
    </delete>
    <!--查询指定教研项目成果人员信息-->
    <select id="getJiaoYuGuiHuaDetail" parameterType="java.lang.Integer" resultMap="JiaoYuGuiHua_people">
        select teacher.tea_name,teacher.badeg from participation,teacher where participation.badge=teacher.badeg and participation.ach_id=#{id} and participation.type=5
    </select>
<!--    &lt;!&ndash;教研项目成果全局模糊查询&ndash;&gt;-->
    <select id="getSearchJiaoYuGuiHua" resultMap="JiaoYuGuiHua,count5">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select c.* from jiaoyuguihuaxiangmu c,teacher t,participation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.tea_name,c.partment,c.name,c.finishtime,c.status,p.badge,c.grade,c.level,c.danwei) LIKE CONCAT('%',#{key},'%') limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};
        select count(*) count5 from jiaoyuguihuaxiangmu c,teacher t,participation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.tea_name,c.partment,c.name,c.finishtime,c.status,p.badge,c.grade,c.level,c.danwei) LIKE CONCAT('%',#{key},'%');
    </select>

    <insert id="insertJiaoYuGuiHua" parameterType="com.example.graduate_sever.entity.JiaoYuGuiHuaXiangMuEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT IGNORE INTO jiaoyuguihuaxiangmu(`status`, `finishtime`, `partment`, `grade`, `level`, `danwei`, `name`,`badge`) VALUES (#{status,jdbcType=INTEGER},#{finishtime,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR},#{grade,jdbcType=VARCHAR},#{level,jdbcType=VARCHAR},#{danwei,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},#{badge,jdbcType=INTEGER})
    </insert>

    <insert id="shenBaoJiaoYuGuiHua" parameterType="com.example.graduate_sever.entity.JiaoYuGuiHuaXiangMuEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT IGNORE INTO jiaoyuguihuaxiangmu(`status`, `finishtime`, `partment`, `grade`, `level`, `danwei`, `name`,`shenbao`) VALUES (#{status,jdbcType=INTEGER},#{finishtime,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR},#{grade,jdbcType=VARCHAR},#{level,jdbcType=VARCHAR},#{danwei,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},#{badge,jdbcType=INTEGER})
    </insert>

    <insert id="insertJiaoYuGuiHuaParticipation" parameterType="com.example.graduate_sever.entity.ParticipationEntity" useGeneratedKeys="true">
        INSERT IGNORE INTO participation(`badge`, `ach_id`, `type`) VALUES (#{badge,jdbcType=INTEGER},#{ach_id,jdbcType=INTEGER},#{type,jdbcType=INTEGER})
    </insert>
</mapper>

