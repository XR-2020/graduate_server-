    <insert id="insertKeYanXiangMuJieXiang" parameterType="com.example.graduate_sever.entity.HeBingEntity" useGeneratedKeys="true">
        INSERT INTO keyanxiangmujiexiang( `status`, `name`, `finishtime`, `partment`) VALUES (#{status,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{finishtime,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR})
    </insert>
