<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.graduate_sever.Dao.ZongXiangKeYanMapper">
    <!--实体映射-->
    <resultMap id="ZongXiangKeYan" type="com.example.graduate_sever.model.ZongXiangKeYanXiangMu">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="finishtime" jdbcType="VARCHAR" property="finishtime"/>
        <result column="level" jdbcType="VARCHAR" property="level"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="lixiang" jdbcType="VARCHAR" property="lixiang"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="partment" jdbcType="VARCHAR" property="partment"/>
        <result column="badge" jdbcType="INTEGER" property="badge"/>
        <result column="tea_name" jdbcType="VARCHAR" property="tea_name"/>
    </resultMap>
    <!--参与人映射-->
    <resultMap id="ZongXiangKeYan_people" type="com.example.graduate_sever.common.People">
        <result column="badeg" jdbcType="INTEGER" javaType="int" property="badge"/>
        <result column="tea_name" jdbcType="VARCHAR" javaType="string" property="name"/>
    </resultMap>
    <resultMap id="count12" type="java.lang.Long"/>
    <!--查询教研项目所有成果-->
    <!--application.yml 中通过 type-aliases-package 指定了实体类的为了，因此-->
    <select id="getAllZongXiangKeYan" resultMap="ZongXiangKeYan,count12">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select zongxiangkeyanxiangmu.* from zongxiangkeyanxiangmu where status=1 limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};select count(*) count12 from zongxiangkeyanxiangmu where status=1;
    </select>
    <!--删除一个教研项目-->
    <delete id="deleteOneZongXiangKeYan">
        delete * from zongxiangkeyanxiangmu where zongxiangkeyanxiangmu.id=#{id}
    </delete>
    <!--查询指定教研项目成果人员信息-->
    <select id="getZongXiangKeYanDetail" parameterType="java.lang.Integer" resultMap="ZongXiangKeYan_people">
        select teacher.tea_name,teacher.badeg from participation,teacher where participation.badge=teacher.badeg and participation.ach_id=#{id} and participation.type=8
    </select>
<!--    &lt;!&ndash;教研项目成果全局模糊查询&ndash;&gt;-->
    <select id="getSearchZongXiangKeYan" resultMap="ZongXiangKeYan,count12">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select c.* from zongxiangkeyanxiangmu c,teacher t,participation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.tea_name,c.partment,c.name,c.finishtime,c.status,p.badge,c.lixiang,c.level,c.type) LIKE CONCAT('%',#{key},'%') limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};
        select count(*) count12 from zongxiangkeyanxiangmu c,teacher t,participation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.tea_name,c.partment,c.name,c.finishtime,c.status,p.badge,c.lixiang,c.level,c.type)LIKE CONCAT('%',#{key},'%');
    </select>

    <insert id="insertZongXiangKeYan" parameterType="com.example.graduate_sever.entity.ZongXiangKeYanXiangMuEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO zongxiangkeyanxiangmu(`status`, `finishtime`, `level`, `type`, `lixiang`, `name`, `partment`) VALUES (#{status,jdbcType=INTEGER},#{finishtime,jdbcType=VARCHAR},#{level,jdbcType=VARCHAR},#{type,jdbcType=VARCHAR},#{lixiang,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR})
    </insert>

    <insert id="insertZongXiangKeYanParticipation" parameterType="com.example.graduate_sever.entity.ParticipationEntity" useGeneratedKeys="true">
        INSERT INTO participation(`badge`, `ach_id`, `type`) VALUES (#{badge,jdbcType=INTEGER},#{ach_id,jdbcType=INTEGER},#{type,jdbcType=INTEGER})
    </insert>
</mapper>

