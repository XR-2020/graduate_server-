<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.graduate_sever.Dao.JiaoYanLunWenMapper">
    <!--教研项目实体映射-->
    <resultMap id="JiaoYanLunWen" type="com.example.graduate_sever.model.JiaoYanLunWen">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="finishtime" jdbcType="VARCHAR" property="finishtime"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="partment" jdbcType="VARCHAR" property="partment"/>
        <result column="badge" jdbcType="INTEGER" property="badge"/>
        <result column="shenbao" property="shenbao"/>
        <result column="metails" property="metails"/>
    </resultMap>

    <resultMap id="JiaoYanLunWenMyShenBaoModel" type="com.example.graduate_sever.common.People">
        <result column="name" property="name"/>
        <result column="id" property="id"/>
        <result column="partment" property="partment"/>
        <result column="finishtime" property="finishtime"/>
    </resultMap>
    <!--参与人映射-->
    <resultMap id="JiaoYanLunWen_people" type="com.example.graduate_sever.common.People">
        <result column="badeg" jdbcType="INTEGER" javaType="int" property="badge"/>
        <result column="tea_name" jdbcType="VARCHAR" javaType="string" property="name"/>
    </resultMap>
    <resultMap id="count3" type="java.lang.Long"/>
    <resultMap id="JiaoYanLunWenMetails" type="com.example.graduate_sever.common.Metails">
        <result column="metails" property="metails"></result>
    </resultMap>
    <!--查询教研项目所有成果-->
    <!--application.yml 中通过 type-aliases-package 指定了实体类的为了，因此-->
    <select id="getAllJiaoYanLunWen" resultMap="JiaoYanLunWen,count3">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select jiaoyanlunwen.* from jiaoyanlunwen where status=1 limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};select count(*) count3 from jiaoyanlunwen where status=1;
    </select>

    <select id="selectOneJiaoYanLunWen" resultMap="JiaoYanLunWen">
        select * from `jiaoyanlunwen` where id=#{id}
    </select>
    <!--删除一个教研项目-->
    <delete id="deleteOneJiaoYanLunWen">
        delete * from jiaoyanlunwen where jiaoyanlunwen.id=#{id}
    </delete>
    <!--查询指定教研项目成果人员信息-->
    <select id="getJiaoYanLunWenDetail" parameterType="java.lang.Integer" resultMap="JiaoYanLunWen_people">
        select teacher.tea_name,teacher.badeg from participation,teacher where participation.badge=teacher.badeg and participation.ach_id=#{id} and participation.type=3
    </select>
<!--    &lt;!&ndash;教研项目成果全局模糊查询&ndash;&gt;-->
    <select id="getSearchJiaoYanLunWen" resultMap="JiaoYanLunWen,count3">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select c.* from jiaoyanlunwen c,teacher t,participation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.tea_name,c.partment,c.name,c.finishtime,c.status,p.badge) LIKE CONCAT('%',#{key},'%') limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER};
        select count(*) count3 from jiaoyanlunwen c,teacher t,participation p where status=1 and p.badge=t.badeg and p.ach_id=c.id and CONCAT(c.id,t.tea_name,c.partment,c.name,c.finishtime,c.status,p.badge) LIKE CONCAT('%',#{key},'%');
    </select>

    <insert id="insertJiaoYanLunWen" parameterType="com.example.graduate_sever.entity.JiaoYanLunWenEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT IGNORE INTO jiaoyanlunwen(`name`, `partment`, `finishtime`, `status`,`badge`) VALUES (#{name,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR},#{finishtime,jdbcType=VARCHAR},#{status,jdbcType=INTEGER},#{badge,jdbcType=INTEGER})
    </insert>

    <insert id="shenBaoJiaoYanLunWen" parameterType="com.example.graduate_sever.entity.JiaoYanLunWenEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT IGNORE INTO jiaoyanlunwen(`name`, `partment`, `finishtime`, `status`,`shenbao`,`metails`) VALUES (#{name,jdbcType=VARCHAR},#{partment,jdbcType=VARCHAR},#{finishtime,jdbcType=VARCHAR},#{status,jdbcType=INTEGER},#{badge,jdbcType=INTEGER},#{metails,jdbcType=BINARY})
    </insert>

    <insert id="insertJiaoYanLunWenParticipation" parameterType="com.example.graduate_sever.entity.ParticipationEntity" useGeneratedKeys="true">
        INSERT IGNORE INTO participation(`badge`, `ach_id`, `type`) VALUES (#{badge,jdbcType=INTEGER},#{ach_id,jdbcType=INTEGER},#{type,jdbcType=INTEGER})
    </insert>
    <select id="JiaoYanLunWenMetails" parameterType="java.lang.Integer" resultMap="JiaoYanLunWenMetails">
        SELECT metails FROM `jiaoyanlunwen` where id=#{id}
    </select>

    <select id="selectJiaoYanLunWen" parameterType="java.lang.String" resultMap="JiaoYanLunWen">
        select * from `jiaoyanlunwen` where status=1 and finishtime between #{date1} and #{date2}
    </select>

    <select id="waitingjiaoyanlunwen" resultMap="JiaoYanLunWen">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select * from `jiaoyanlunwen` where status=0 limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
    </select>

    <update id="passJiaoYanLunWen" parameterType="java.lang.Integer">
        update `jiaoyanlunwen` set `status`=#{ispass} where id=#{id}
    </update>

    <select id="getJiaoYanLunWenDisData" resultMap="JiaoYanLunWenMyShenBaoModel">
        <bind name="beginIndex" value="(pageIndex-1)*pageSize"></bind>
        select c.name,c.id,c.partment,c.finishtime from `jiaoyanlunwen` c,participation p where status=-1 and c.shenbao=p.badge and c.shenbao=#{badge} and p.type=1 limit #{beginIndex,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
    </select>
    <update id="editJiaoYanLunWen">
        update `jiaoyanlunwen` set partment=#{partment},finishtime=#{finishtime},name=#{name} where id=#{id}
    </update>
</mapper>

